# ------------------------------------------------------------------------------
# .env.example
# ------------------------------------------------------------------------------
# Copy this file to .env and fill in real values.

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=product_dev_db

# Google Cloud
GCP_PROJECT_ID=your-gcp-project-id
GCP_SERVICE_ACCOUNT_JSON=./gcp-service-account.json
GCP_REGION=us-central1

# Datadog
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key
DATADOG_SITE=datadoghq.com
DATADOG_SERVICE=product-dev-consulting

# GitHub Configuration for Self-Improvement Agent
GITHUB_TOKEN=your-github-token
GITHUB_REPO_OWNER=your-github-username
GITHUB_REPO_NAME=your-repo-name

# Node Environment
NODE_ENV=development

# Google Workspace (Gmail) Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=your-google-redirect-uri
GOOGLE_REFRESH_TOKEN=your-google-refresh-token

# Google Calendar Configuration
GOOGLE_CALENDAR_ID=your-google-calendar-id

# RabbitMQ Configuration
RABBITMQ_URL=amqp://rabbitmq:5672

# Slack Configuration
SLACK_BOT_TOKEN=your-slack-bot-token
SLACK_CHANNEL_ID=your-slack-channel-id

# Jira Configuration
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_API_TOKEN=your-jira-api-token
JIRA_EMAIL=your-email@example.com
JIRA_PROJECT_KEY=YOURPROJECTKEY

# Confluence Configuration
CONFLUENCE_BASE_URL=https://your-domain.atlassian.net/wiki
CONFLUENCE_API_TOKEN=your-confluence-api-token
CONFLUENCE_USER_EMAIL=your-email@example.com

# Zendesk Configuration
ZENDESK_SUBDOMAIN=your-zendesk-subdomain
ZENDESK_EMAIL=your-zendesk-email@example.com
ZENDESK_API_TOKEN=your-zendesk-api-token

# GitHub Configuration for Development Agent
GITHUB_TOKEN=your-github-token
GITHUB_REPO_OWNER=your-github-username
GITHUB_REPO_NAME=your-repo-name

# Client Portal Configuration
CLIENT_PORTAL_URL=https://client.mrtco.ai

# Domain Configuration
DOMAIN_NAME=mrtco.ai
